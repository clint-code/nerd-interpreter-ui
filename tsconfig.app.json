    "useDefineForClassFields": true,
    "outDir": "./out-tsc/app",
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
